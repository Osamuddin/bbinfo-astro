---
// src/layouts/Layout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// ❌ 以下のimport文はすべて削除してください（これが重くなった原因です）
// import '@fontsource/noto-sans-jp/300.css';
// import '@fontsource/noto-sans-jp/400.css';
// ... etc
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
        <link rel="icon" href="/favicon.ico" sizes="32x32" />

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

        <link 
            href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700;900&family=Inter:wght@400;600;800&display=swap" 
            rel="stylesheet"
            media="print"
            onload="this.media='all'"
        >
        
        <noscript>
            <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700;900&family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
        </noscript>
        <script src="https://unpkg.com/@phosphor-icons/web" defer></script>

        <title>BBINFO | インドで日本のテレビを見るなら</title>
    </head>
    
    <body class="antialiased selection:bg-cyan-500 selection:text-white bg-[#030303] text-white">
        <div class="hero-geometric-bg">
           </div>

        <Header />

        <main class="relative w-full overflow-x-hidden">
            <slot />
        </main>
        
        <Footer />
    </body>
</html>